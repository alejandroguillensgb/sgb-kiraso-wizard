div.aside-inner

  uib-tabset(Justified="true")
    uib-tab(heading="Apps&Comp")
        uib-accordion(close-others="oneAtATime")
          uib-accordion-group(heading="Prebuilt Apps")
            nav.sidebar(sidebar="")
              ul.nav
                li(ng-repeat='item in appItems')
                  {{item.name}}
        
          uib-accordion-group(heading="Components")
            nav.sidebar(sidebar="")
              ul.nav
                li(ng-repeat='item in compItems') 
                  span(ng-click="createNode(item)") {{item.name}}
                  span(style="float: right;") 
                    a.icon-eye(ng-click="openModal(item)")
                    a.icon-doc(ng-click=('copyContent(item)'))
                    a.icon-settings

                li
                  div Create a component
                    span(style="float: right;") 
                      em.icon-note
                li
                  div Add your component
                    span(style="float: right;") 
                      em.icon-plus
    uib-tab(heading="Hierarchy")
      